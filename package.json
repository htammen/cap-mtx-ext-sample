{
  "name": "app1",
  "version": "0.2.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "Simple multitenancy Business Application",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.53",
    "@sap/audit-logging": "^5",
    "@sap/cds": "^6.4",
    "@sap/cds-mtxs": "^1.4",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "axios": "^0.27.2",
    "cf-nodejs-logging-support": "^6",
    "cfenv": "^1.2.4",
    "debug": "^4.3",
    "express": "^4",
    "hdb": "^0.19",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.4",
    "@tsconfig/node18": "^1.0.1",
    "@types/cfenv": "^1.2.2",
    "@types/sap__xsenv": "^3",
    "prettier": "^2",
    "sqlite3": "^5.0.2",
    "zx": "^7.1.1"
  },
  "sapux": [
    "app/resources/fiori"
  ],
  "scripts": {
    "debug": "tsc && run(){ CDS_ENV=production node --inspect ./node_modules/@sap/cds/bin/cds.js run; }; run",
    "debug:hybrid:freetier": "cp -f default-env.json.freetier default-env.json && tsc && run(){ DEBUG=mtx CDS_ENV=production node --inspect-brk ./node_modules/@sap/cds/bin/cds.js run; }; run",
    "debug:local": "tsc && run(){ DEBUG=mtx CDS_ENV=development node --inspect ./node_modules/@sap/cds/bin/cds.js run; }; run",
    "start": "cds run",
    "start_with_server": "CDS_ENV=production cds-ts run",
    "start_local_ui": "echo 'Starting UI locally' && cd ./app && node custom.js",
    "build": "tsc && mbt build && npm i",
    "deploy": "cf deploy ./mta_archives/app1_0.0.1.mtar",
    "upd-defenv": "cf de app1-srv",
    "make-default-env:sm": "npx zx make-default-env.mjs --sm"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "log": {
      "levels": {
        "app1": "debug",
        "mtx": "debug"
      }
    },
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            },
            "carol": {
              "tenant": "t1",
              "roles": [ "admin", "cds.Subscriber", "cds.ExtensionDeveloper", "cds.UIFlexDeveloper", "Viewer", "Admin" ]
            },
            "erin": {
              "tenant": "t2",
              "roles": [ "admin", "cds.Subscriber", "cds.ExtensionDeveloper", "Viewer", "Admin" ]
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud"
        },
        "[development]": {
          "kind": "sql"
        },
        "model": [
          "db",
          "srv"
        ],
        "vcap": {
          "label": "service-manager"
        }
      },
      "multitenancy": true,
      "extensibility": true,
      "cds.xt.ExtensibilityService": {
        "element-prefix": [
          "Z_",
          "ZZ_"
        ],
        "namespace-blocklist": [
          "com.sap.",
          "sap.",
          "app1."
        ],
        "extension-allowlist": [
          {
            "for": [
              "app1.db.Sales"
            ]
          },
          {
            "for": [
              "CatalogService"
            ],
            "kind": "service"
          }
        ]
      }
    }
  }
}
