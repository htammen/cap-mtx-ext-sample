{
  "name": "cap-papm-cap",
  "version": "0.2.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "Simple multitenancy Business Application",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.53",
    "@sap/audit-logging": "^5",
    "@sap/cds": "^5",
    "@sap/cds-mtx": "^2",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "axios": "^0.27.2",
    "cf-nodejs-logging-support": "^6",
    "cfenv": "^1.2.4",
    "debug": "^4.3",
    "express": "^4",
    "hdb": "^0.19",
    "passport": "^0.4.1",
    "serialize-error": "^11.0.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.4",
    "@tsconfig/node18": "^1.0.1",
    "@types/cfenv": "^1.2.2",
    "@types/sap__xsenv": "^2.0.3",
    "prettier": "2.6.2",
    "sqlite3": "^5.0.2"
  },
  "sapux": [
    "app/resources/fiori"
  ],
  "scripts": {
    "debug": "tsc && run(){ CDS_ENV=production node --inspect ./node_modules/@sap/cds/bin/cds.js run; }; run",
    "start": "cds run",
    "start_with_server": "CDS_ENV=production cds-ts run",
    "start_local_ui": "echo 'Starting UI locally' && cd ./app && node custom.js",
    "build": "rm -f mta_archives/* && tsc && mbt build",
    "deploy": "cf deploy ./mta_archives/cap-papm-cap_0.0.1.mtar",
    "upd-defenv": "cf de cap-papm-cap-srv"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "src": "db",
          "options": {
            "model": [
              "db",
              "app",
              "srv"
            ]
          }
        },
        {
          "for": "node-cf",
          "src": "srv",
          "options": {
            "model": [
              "db",
              "app",
              "srv"
            ]
          }
        },
        {
          "for": "mtx",
          "src": ".",
          "dest": "srv",
          "options": {
            "model": [
              "db",
              "app",
              "srv",
              "."
            ]
          }
        }
      ]
    },
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "JWT",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud"
        },
        "[development]": {
          "kind": "sql"
        },
        "model": [
          "db",
          "srv"
        ],
        "vcap": {
          "label": "service-manager"
        }
      },
      "multitenancy": true
    },
    "mtx": {
      "api": {
        "provisioning": true,
        "metadata": true,
        "model": true
      },
      "element-prefix": [
        "Z_",
        "ZZ_"
      ],
      "namespace-blocklist": [
        "com.sap.",
        "sap.",
        "app1."
      ],
      "extension-allowlist": [
        {
          "for": [
            "app1.db.Sales"
          ]
        },
        {
          "for": [
            "CatalogService"
          ],
          "kind": "service"
        }
      ]
    },
    "log": {
      "levels": {
        "app": "trace",
        "cds": "trace"
      }
    }
  }
}
