{
    "welcomeFile": "index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/catalog/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.Viewer",
            "destination": "srv",
            "cacheControl": "no-cache, no-store, must-revalidate"
        }
        ,
        {
            "source": "^/monitoring/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.Viewer",
            "destination": "srv"
        }
        ,
        {
            "source": "^/extend/(.*)",
            "target": "$1",
            "authenticationType": "none",
            "destination": "srv"
        }
        ,
        {
            "source": "^/mtx/(.*)",
            "target": "$1",
            "authenticationType": "none",
            "destination": "srv"
        }
        ,
        {
            "source": "^/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.Viewer",
            "localDir": "resources",
            "cacheControl": "no-cache"
        }
    ]
}
